{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ES2021.WeakRef"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "useDefineForClassFields": false,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    // "noEmit": true,

    "strict": true,
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
		"verbatimModuleSyntax": true,
  },
  "include": ["src"],
}
